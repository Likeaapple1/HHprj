<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="emp">
  <!-- 회원목록  -->
	<select id="getEmp" parameterType="empDto" resultType="empDto">
		SELECT *
		FROM EMP
	</select>
	
	
	
<!-- 회원등록 -->
	<insert id="insertEmp" parameterType="empDto">
		INSERT INTO EMP
		(
			 EMP_NO
		    ,EMP_NAME
		    ,EMP_PASSWORD
		    ,EMP_BIRTH
		    ,EMP_DEPTNAME
		    ,EMP_JOBNAME
		    ,EMP_PHONE
		    ,EMP_ADD
		    ,EMP_DT_ADD
		    ,EMP_OFFICE_PHONE
		    ,EMP_EMAIL
		    ,EMP_ENROLLDATE
		    ,EMP_RESIGNDATE
		    ,EMP_MOD  
		    ,EMP_PHOTO_ROUTE
		    ,EMP_PHOTO_NAME
		    ,EMP_RESIGNYN
		    ,MANAGER_YN
		    ,MANAGER_DEPT
		)
		VALUES
		(
			 #{empNo}
			,#{empName}
			,#{empPassword}
			,#{empBirth}
			,#{empDeptname}
			,#{empJobname}
			,#{empPhone}
			,#{empAdd}
			,#{empDtAdd}
			,#{empOfficePhone}
			,#{empEmail}
			,#{empEnrolldate}
			,null
			,null
			,#{empPhotoRoute}
			,#{empPhotoName}
			,null
			,null
			,null
		)
	</insert>

